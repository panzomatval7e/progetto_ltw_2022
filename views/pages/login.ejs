<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
    <script src="https://kit.fontawesome.com/3f78fb7a22.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/css/authentication.css">

    <%- include('../partials/back-to-top-script') %>

    <title>Login on Photo Community</title>
  </head>
  <body>
    
    <!-- NAVBAR + BACK TO TOP-->
    <%- include('../partials/navbar', {sessione: sessione}); %>

    <!-- LOGIN FORM -->
    <div class="sidenav mb-2">
      <div class="side-text">
         <h2 class="display-3">Welcome back!</h2>
         <p>Login or register from here to access.</p>
      </div>
    </div>
    <div class="main">
      <div class="col-md-6 col-sm-12">
         <div class="login-form">
            <% if (message) { %>
                <div style="text-align: center" class="alert alert-<%=message.type%>">
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    <strong><%= message.intro %></strong> <%= message.message %>
                </div>
            <% } %>
            <form action="/auth" method="post">
              <!-- USERNAME -->
              <div class="form-group">
                <i class="fa-solid fa-user"></i>
                <input type="text" class="form-control" id="usernameId" placeholder="Username" name="username" autofocus>
              </div>
              <!-- PASSWORD -->
              <div class="form-group">
                <i class="fa-solid fa-lock"></i>
                <input type="password" class="form-control" placeholder="Password" id="password" name="password">
              </div>
              <!-- BUTTONS -->
              <button type="submit" class="btn btn-black">Login</button>
              <p class="register">Don't have an account?</p>
              <a href="/signup"><button type="button" class="btn btn-grey">Register here</button></a>
              </form>
         </div>
      </div>
    </div>



    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
    <script src="https://kit.fontawesome.com/3f78fb7a22.js"></script>
    <link rel="stylesheet" href="../css/authentication.css">
    <title>Register on Photo Community</title>
  </head>
  <body>
    
    <!-- NAVBAR + BACK TO TOP-->
    <%- include('../partials/navbar', {sessione: sessione}); %>

    <!-- REGISTRATION FORM -->
    <div class="sidenav mb-2">
      <div class="side-text">
         <h2 class="display-1" id="side-text">Join the communityüåç</h2>
         <p>Register from here to access.</p>
      </div>
    </div>

    <div class="main">
      <div class="col-md-6 col-sm-12 justify-content-center">
         <div class="register-form">
            <% if (message) { %>
                <div style="text-align: center" class="alert alert-<%=message.type%>">
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    <strong><%= message.intro %></strong> <%= message.message %>
                </div>
            <% } %>
            <form action="/signup" method="post">
              <!-- USERNAME -->
              <div class="form-group">
                <i class="fa-solid fa-user"></i>
                <input type="text" class="form-control" placeholder="Username" id="username" name="username" autofocus>
              </div>
              <!-- NAME -->
              <div class="form-group">
                <i class="fa-solid fa-id-badge"></i>
                <input type="text" class="form-control" placeholder="Name" id="nome" name="nome">
              </div>
              <!-- MAIL -->
              <div class="form-group">
                <i class="fa-solid fa-envelope"></i>
                <input type="text" class="form-control" placeholder="E-mail" id="mail" name="mail">
              </div>
              <!-- PASSWORD -->
              <div class="form-group">
                <i class="fa-solid fa-lock"></i>
                <input type="password" class="form-control" placeholder="Password" id="password" name="password">
              </div>
              <!-- BUTTONS -->
              <button type="submit" class="btn btn-black">Sign Up</button>
              <p class="register">Already have an account?</p>
              <a href="/login"><button type="button" class="btn btn-grey">Login</button></a>
              
            </form>
         </div>
      </div>
    </div>





    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>


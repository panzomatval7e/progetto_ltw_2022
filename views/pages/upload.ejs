<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="/css/navbar.css"/>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="/css/profile.css"/>
    <link rel="stylesheet" type="text/css" href="/css/image.css"/>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <title>Upload photo</title>
    <script>
        function preview() {
            frame.src = URL.createObjectURL(event.target.files[0]);
        }
    </script>
</head>
<body>

    <!-- NAVBAR + BACK TO TOP-->
    <%- include('../partials/navbar', {sessione: sessione}); %>

    <div class="container">
        <div class="row align-items-center padding-mobile">
            <!-- UPLOAD FORM -->
            <div class="col-md-4">
                <form action="/uploadImage" method="POST" enctype="multipart/form-data">
                    <% if (message) { %>
                        <div style="text-align: center" class="alert alert-<%=message.type%>">
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            <strong><%= message.intro %></strong> <%= message.message %>
                        </div>
                    <% } %>
                    <input class="form-control" type="file" name="image" id="formFile" onchange="preview()" required>
                    <input type="text" class="form-control mt-3" name="camera" placeholder="Camera" required>
                    <input type="text" class="form-control mt-3" name="lens" placeholder="Lens" required>
                    <input type="text" class="form-control mt-3" name="focal_length" placeholder="Focal length" required>
                    <input type="text" class="form-control mt-3" name="ISO" placeholder="ISO" required>
                    <input type="text" class="form-control mt-3" name="F" placeholder="F" required>
                    <input type="text" class="form-control mt-3" name="shutter_speed" placeholder="Shutter speed" required>
                    <select class="form-select mt-3" name="categoria" required>
                        <option selected>Categories</option>
                        <option value="portrait">Portrait</option>
                        <option value="landscape">Landscape</option>
                        <option value="sport">Sport</option>
                        <option value="macro">Macro</option>
                        <option value="food">Food</option>
                        <option value="animal">Animal</option>
                        <option value="street">Street</option>
                        <option value="b&w">B&W</option>
                      </select>
                    <button type="submit" class="btn btn-black mt-3 mb-3">Click to upload</button>
                </form>
            </div>
            <!-- PREVIEW IMAGE -->
            <div class="col-md-8 center" id="image">
                <img id="frame" src="" class="center_img img-fluid">
            </div>
        </div>
    </div>

    
</body>
</html>
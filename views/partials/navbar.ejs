<style>
  @import url('https://fonts.googleapis.com/css?family=Plus+Jakarta+Sans|Roboto+Condensed:400,700');
  * {
    font-Family: 'Roboto Condensed', Sans-Serif;
    
    font-family: Plus Jakarta Sans, serif;
  }
  

  .dropdown-item:active, .dropdown-item:focus{
    background-color: rgb(233, 233, 233)  !important; 
  }

  .logout:hover{
    background-color: rgba(253, 72, 17, 0.885) !important;
  }

  .form-control:focus, .form-control:active {
    border-color: rgb(233, 233, 233) !important;
    box-shadow: 0 0 0 0.2rem rgb(233, 233, 233) !important;
  }
</style>
<nav class="navbar navbar-expand-lg bg-white navbar-light py-3 sticky-top shadow">
    <div class="container">
      
      <a href="/" class="mr-auto d-flex"><img src="images/logo.jpg"></a>

      <button
        class="navbar-toggler ms-auto me-2"
        type="button"
        data-bs-toggle="collapse"
        data-bs-target="#navmenu"
      >
        <span class="navbar-toggler-icon"></span>
      </button>

      <% if(sessione.loggedin == true){ %>
        <div class="dropdown text-end nav-item login">
            <a href="#" class="d-block link-dark text-decoration-none dropdown-toggle" id="dropdownUser1" data-bs-toggle="dropdown" aria-expanded="false">
              <img src="images/<%= sessione.profile_image %>" alt="mdo" width="32" height="32" class="rounded-circle">
            </a>
            <ul class="dropdown-menu dropdown-menu-right dropdown-menu-lg-left text-small" aria-labelledby="dropdownUser1">
              <li><a class="dropdown-item" href="/profile">Profile</a></li>
              <li><a class="dropdown-item" href="/upload">Upload photo</a></li>
              <li><hr class="dropdown-divider"></li>
              <li><a class="dropdown-item logout" href="/logout">Log out</a></li>
            </ul>
        </div>
    <% } else { %>
      <div class="nav-item login">
        <ul class="nav navbar-nav">
          <li class="nav-item">
              <a href="/login" class="nav-link">Login</a>
          </li>
        </ul>
      </div>
    <% } %>

      <div class="navbar-collapse collapse" id="navmenu">
        <ul class="nav navbar-nav mr-auto">
          <li class="nav-item dropdown">
            <a href="#" class="nav-link dropdown-toggle" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">Categories</a>
          <ul class="dropdown-menu dropdown-menu-light" aria-labelledby="navbarDropdown">
            <li><a class="dropdown-item" href="/filter/sport">Motori</a></li>
            <li><a class="dropdown-item" href="/filter/landscape">Landscape</a></li>
          </ul>
          <li class="nav-item">
            <a href="/aboutus" class="nav-link">About us</a>
          </li>
        </ul>
        <ul class="navbar-nav ms-auto me-2">
          <li>
            <form action="/searchUser" method="POST">
              <input name="user_search" type="search" class="form-control" placeholder="Search user" aria-label="Search user">
            </form>
          </li>
      </ul>
      </div>
    </div>
  </nav>

  <% if (message) { %>
    <div style="text-align: center" class="alert alert-<%=message.type%>">
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        <strong><%= message.intro %></strong> <%= message.message %>
    </div>
  <% } %>

  <a href="#" class="bck"></a>